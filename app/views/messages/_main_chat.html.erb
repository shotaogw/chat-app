<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="left-form">
    <%= f.text_field :content, class: 'post-message', placeholder: 'type a message' %>
    <label class="post-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>